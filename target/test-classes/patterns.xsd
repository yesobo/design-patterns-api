<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="patterns">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="pattern" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:all>
              <xs:element type="xs:byte" name="id"/>
              <xs:element type="xs:string" name="name"/>
              <xs:element type="xs:string" name="category"/>
              <xs:element type="xs:string" name="intent"/>
              <xs:element type="xs:string" name="motivation"/>
              <xs:element type="xs:string" name="applicability"/>
              <xs:element type="xs:string" name="structure"/>
            </xs:all>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>